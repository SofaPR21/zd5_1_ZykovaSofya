<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zd4_Zykova_Sofya.CreditPage"
             Title="Кредитный калькулятор">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Сумма кредита -->
            <Label Text="Сумма кредита (руб):" FontAttributes="Bold"/>
            <Entry x:Name="amountEntry" 
                   Keyboard="Numeric" 
                   Placeholder="100000"/>

            <!-- Срок -->
            <Label Text="Срок (месяцев):" FontAttributes="Bold"/>
            <Picker x:Name="termPicker" SelectedIndex="0">
                <Picker.Items>
                    <x:String>6</x:String>
                    <x:String>12</x:String>
                    <x:String>24</x:String>
                    <x:String>36</x:String>
                    <x:String>60</x:String>
                </Picker.Items>
            </Picker>

            <!-- Тип платежа -->
            <Label Text="Вид платежа:" FontAttributes="Bold"/>
            <Picker x:Name="paymentTypePicker" SelectedIndex="0">
                <Picker.Items>
                    <x:String>Аннуитетный</x:String>
                    <x:String>Дифференцированный</x:String>
                </Picker.Items>
            </Picker>

            <!-- Процентная ставка -->
            <Label Text="Процентная ставка (%):" FontAttributes="Bold"/>
            <Entry x:Name="rateEntry" 
                   Keyboard="Numeric" 
                   Text="10"/>

            <!-- Кнопка расчета -->
            <Button Text="Рассчитать" 
                    Clicked="OnCalculateClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"/>

            <!-- Результаты -->
            <Frame BorderColor="LightGray" 
                            CornerRadius="10" 
                            Padding="10"
                            BackgroundColor="White" 
                            HasShadow="True"> 
                <!-- Тень для выделения -->
                <StackLayout>
                    <Label x:Name="monthlyPaymentLabel"
                           Text="Ежемесячный платеж: -"
                           TextColor="Black" 
                           FontAttributes="Bold"
                           IsVisible="True"/>

                    <Label x:Name="totalPaymentLabel" 
                           Text="Общая сумма: -"
                           TextColor="Black"/>

                    <Label x:Name="overpaymentLabel" 
                           Text="Переплата: -"
                           TextColor="Black"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>
